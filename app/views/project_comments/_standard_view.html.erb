<table class="table table-hover" id="users_table">
  <thead>
    <tr>
      <th style="width:20%">User</th>
      <th style="width:60%">Comment</th>
      <th style="width:20%">
        <div class="pull-right">
          <%= link_to bootstrap_icon_tag('plus') +' Add comment', new_project_project_comment_path(@project, comment_type: comment_type, project_data_source_item_id: project_data_source_item_id), remote: true, class: 'btn btn-primary btn-sm reject_data_source_item' %>
        </div>

      </th>
    </tr>
  </thead>
  <tbody>
    <% comments.order('updated_at DESC').each do |comment| %>
      <tr>
        <td><%= comment.user_email %></td>
        <td><%= comment.comment %></td>
        <td><%= timeago_tag(comment.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
