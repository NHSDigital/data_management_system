<li class="list-group-item">
  <div class="input-group">
    <span class="input-group-addon" style="width: 50%;">      
      <%= form.control_group(:add1) { form.text_field :add1 } %>
      <%= form.control_group(:add2) { form.text_field :add2 } %>
      <%= form.control_group(:city) { form.text_field :city } %>
      <%= form.control_group(:postcode) { form.text_field :postcode } %>
      <%= form.control_group(:country) do %>
        <%= form.collection_select :country_id, Lookups::Country.sorted_dropdown, :id, :value, { include_blank: true }, class: 'form-control' %>
      <% end %>
      <%= form.control_group(:telephone) { form.text_field :telephone } %>
    </span>
    <%= content_tag(:div, bootstrap_icon_tag(:"minus-sign"), class: 'remove_record input-group-addon') unless form.readonly? %>
    <%= form.hidden_field :_destroy %>
  </div>
</li>
