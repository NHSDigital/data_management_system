<%
  @node ||= @choice
  html_content = escape_javascript bootstrap_form_for(
    @node, url: edit_error_choice_path(@node),
    remote: true, horizontal: 2) { |form| render('form', form: form) }
%>

jQuery('#modal_title').html("Editing Node: <%= @node.name %>");
jQuery('#modal_body').html('<%= html_content %>').parents('.modal').modal('show');
$(toggle_node_form_element('existing-node', 'add-existing-node'));
<%= render "nodes/save" %>