<%
  @project ||= @project_dataset.project # shallow routing means this may not have been set
%>

$('#<%= "project_dataset_#{@project_dataset.id}"%>').html("<%= escape_javascript(render partial: 'project_datasets/approval', locals: { project_dataset: @project_dataset } ) %>");

$('#dataset_approval_status').html("<%= escape_javascript approval_button_message(@project_dataset.approved) %>");
$('#dataset_approval_status').removeClass().addClass('label label-<%= approval_button_style(@project_dataset.approved) %>');

$('#status_label').html("<%= escape_javascript(render partial: 'projects/status_label', locals: { project: @project } ) %>");
