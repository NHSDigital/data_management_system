<%
  scope    = @project.current_state.to_lookup_key
  title    = @project.name
  state    = @project.current_state_name
  assigner = @assigned_by&.full_name || t('system.name')
%>

<h1><%= t(".#{scope}.heading", default: :'.heading', title: title, state: state) %></h1>
<hr />

<p><%= t(".#{scope}.body", default: :'.body', assigner: assigner) %></p>

<% if @comments %>
  <blockquote>
    <q><%= @comments %></q>
    <footer>â€” <i><%= assigner %></i></footer>
  </blockquote>
  <br />
<% end %>

<section>
  <h2 style="font-size: 1.2em;">Project Details:</h2>
  <%= render 'project_details', project: @project %>
</section>

<br />
<%= render 'footer' %>
