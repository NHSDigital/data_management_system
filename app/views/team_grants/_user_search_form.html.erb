<%= form_with(scope: :user_search, method: :get, class: 'form-inline', id: 'user_search') do |form| %>
  <div class="form-group">
    <%= form.label(:first_name, class: 'sr-only') %>
    <%= form.text_field(:first_name, value: params.dig(:user_search, :first_name), class: 'form-control', placeholder: User.human_attribute_name(:first_name)) %>
  </div>

  <div class="form-group">
    <%= form.label(:last_name, class: 'sr-only') %>
    <%= form.text_field(:last_name, value: params.dig(:user_search, :last_name), class: 'form-control', placeholder: User.human_attribute_name(:last_name)) %>
  </div>

  <div class="form-group">
    <%= form.label(:email, class: 'sr-only') %>
    <%= form.text_field(:email, value: params.dig(:user_search, :email),class: 'form-control', placeholder: User.human_attribute_name(:email)) %>
  </div>

  <%= link_to bootstrap_icon_tag('remove-circle'), nil, class: 'btn btn-danger', title: 'Reset' %>

  <button type="submit" class="btn btn-primary" title="Search">
    <%= bootstrap_icon_tag(:search) %>
  </button>
<% end %>
