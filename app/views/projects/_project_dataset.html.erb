<li class="list-group-item">
  <div class="input-group">
    <span class="input-group-addon" style="width: 50%;">
      <%= form.select(:dataset_id, project_dataset_selection) %>
    </span>
    <%= content_tag(:div, bootstrap_icon_tag(:"minus-sign"), class: 'remove_record input-group-addon') unless form.readonly? %>
    <%= form.hidden_field :_destroy %>
    <%= form.hidden_field :terms_accepted, value: true %>
  </div>
</li>
