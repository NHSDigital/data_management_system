<% filter_button ||= false %>
<div class="row">
  <div class="col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-8">
    <div class="pull-right form-group form-inline">
      <%= form_with url: url, scope: :search, method: :get, id: 'search-form' do |form| %>
        <div class="form-group">
          <%= project_filter_dropdown_button if filter_button && current_user.odr? %>
          <%= form.label :name, class: 'sr-only' %>
          <div class="input-group">
            <%= search_text_field(form, :name, params.dig(:search, :name), 'Search') %>
            <%= search_button(form) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>