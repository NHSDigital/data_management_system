<% if can?(:approve, @project) %>
  <% if project.legal_ethical_approved.nil? %>
    <div class="btn-group" role="group">
      <%= button_to 'Approve', project_legal_approval_path(project), remote: true, class: 'btn btn-success btn-sm' %>
    </div>
    <div class="btn-group" role="group">
      <%= link_to ' Decline', new_project_legal_rejection_path(project), remote: true, class: 'btn btn-danger btn-sm' %>
    </div>
  <% else %>
    <div class="btn-group" role="group">
      <%= button_to 'X', project_legal_approval_path(project), method: :delete, remote: true, class: 'btn btn-default btn-xs', title: 'Undo', rel: 'tooltip', data: { placement: 'left', container: 'body' } %>
    </div>
    <span id="legal_approval_status" class="label label-<%= approval_button_style(@project.legal_ethical_approved) %>"><%= approval_button_message(@project.legal_ethical_approved) %></span>
  <% end %>
<% end %>

<% if can?(:update, @project) %>
  <%= link_to bootstrap_icon_tag('pencil') + ' Edit', edit_project_path(@project, section: section), remote: true, class: 'btn btn-default' %>
<% end %>

<script type="text/javascript">
  jQuery('a').tooltip();
</script>
