<%= form_with model: project, url: assign_project_path(project), method: :patch, class: 'form-inline', id: 'new_project_assignment' do |form| %>
  <div class="form-group">
    <%= form.label :assigned_user_id, 'Application Manager' %>
    <%= form.collection_select :assigned_user_id, User.all_application_managers.in_use, :id, :full_name, { include_blank: true, disabled: project.assigned_user_id }, class: 'form-control' %>
  </div>
  <%= form.submit 'Apply', class: 'btn btn-default' %>
<% end %>
