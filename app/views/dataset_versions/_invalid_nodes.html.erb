<div id="node-errors">
  <% if @dataset_version_invalid_nodes.present? %>
    <table class="table table-hover" id="node_errors_table">
      <thead>
        <tr>
          <th width="10">Type</th>
          <th width="20%">Name</th>
          <th width="30%">Errors</th>
          <th width="30%">Warnings</th>
          <th width="10%"></th>
        </tr>
      </thead>
      <tbody>      
        <% @dataset_version_invalid_nodes.each do |node| %>
          <%= render 'nodes/error_details', node: node %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
