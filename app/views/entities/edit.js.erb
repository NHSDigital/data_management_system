<%
  @node ||= @entity
  html_content = escape_javascript bootstrap_form_for(
    @entity, url: entity_path(@entity),
    remote: true, horizontal: 2) { |form| render('form', form: form) }
%>

jQuery('#modal_title').html("Editing Node: <%= @entity.name %>");
jQuery('#modal_body').html('<%= html_content %>').parents('.modal').modal('show');
<%= render "nodes/save" %>